{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
      {
        "name": "app",
        "image": "nodejs-chat-server",
        "essential": true,
        "memory": 128,
        "environment": [
          {
            "Name": "NODE_ENV",
            "Value": "production"
          }
        ],
        "portMappings": [
          {
            "hostPort": 80,
            "containerPort": 4000
          }
        ],
        "links": [
          "mongo",
          "redis"
        ]
      },
      {
        "name": "mongo",
        "image": "mongo",
        "essential": true,
        "memory": 128,
        "portMappings": [
          {
            "hostPort": 27017,
            "containerPort": 27017
          }
        ]
      },
      {
        "name": "redis",
        "image": "redis",
        "essential": true,
        "memory": 128,
        "portMappings": [
          {
            "hostPort": 6379,
            "containerPort": 6379
          }
        ]
      },
      {
        "name": "nginx-proxy",
        "image": "nginx",
        "essential": true,
        "memory": 128,
        "portMappings": [
          {
            "hostPort": 80,
            "containerPort": 80
          }
        ],
        "links": [
          "app"
        ]
      }
    ],
    "volumes": [
      {
        "name": "mongo-data",
        "host": {
          "sourcePath": "/var/app/current/mongo-data"
        }
      }
    ],
    "family": ""
  }
